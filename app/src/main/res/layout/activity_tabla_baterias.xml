<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revisión Baterías Completadas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#6200EE"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />


    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar por nombre o RUT"
        android:padding="12dp"
        android:background="@drawable/search_bar_background"
        android:drawableLeft="@drawable/ic_search"
        android:textColor="#000000"
        android:textColorHint="#9E9E9E"
        android:layout_marginBottom="16dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/tableLayoutAlumnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:background="#F1F1F1"
            android:padding="8dp">

            <!-- Encabezado de la tabla -->
            <TableRow
                android:background="#6200EE"
                android:padding="8dp">

                <TextView
                    android:text="Nombre"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="8dp" />

                <TextView
                    android:text="RUT"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="8dp" />

                <TextView
                    android:text="Curso"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="8dp" />

                <TextView
                    android:text="Puntaje"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="8dp" />

                <TextView
                    android:text="Rendimiento"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="8dp" />

            </TableRow>


            <TableRow
                android:background="#E3F2FD"
                android:padding="8dp">

                <TextView
                    android:text="Ejemplo Nombre"
                    android:textColor="#000000"
                    android:padding="8dp" />

                <TextView
                    android:text="12345678-9"
                    android:textColor="#000000"
                    android:padding="8dp" />

                <TextView
                    android:text="2º Básico"
                    android:textColor="#000000"
                    android:padding="8dp" />

                <TextView
                    android:text="10"
                    android:textColor="#000000"
                    android:padding="8dp" />

                <TextView
                    android:text="Alto"
                    android:textColor="#000000"
                    android:padding="8dp" />

            </TableRow>

        </TableLayout>

    </ScrollView>
</LinearLayout>